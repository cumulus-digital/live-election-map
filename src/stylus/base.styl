@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Arvo:400,700');

$background-color = #020d29;

$color_D = #2e83ce;
$color_R = #c21e1e;
$color_L = #b5ab15;
$color_G = #3dc033;

$font-family = 'Arvo', sans-serif;

body {
	background: $background-color url(../../images/election-background.jpg) no-repeat center top;
}

#election-container {
	font-family: $font-family;
	margin: 0 auto;
	max-width: 95%;
	padding: 0 0 100px;
	position: relative;
	width: 970px;
	z-index: 1;
	
	* {
		box-sizing: border-box !important;
		font-family: @font-family !important;
	}
	img {
		margin: 0 !important;
		padding: 0 !important;
	}
	p {
		color: inherit !important;
		margin: 0 0 .75em !important;
		padding: 0 !important;
	}
	
	/.emap-header {
		margin: 45px auto 35px;
		max-width: 503px;
		position: relative;
		text-align: center;
		width: 100%;
		z-index: 10;
		
		@media all and (max-width: 500px) {
			margin-bottom: 10px;
		}
		
		img {
			max-width: 100%;
		}
	}
}

.emap-log-container {
	font-size: 11px;
	margin: 0 auto;
	position: relative;
	width: 40%;
	z-index: 1;
	
	@media all and (max-width: 600px) {
		width: 70%;
	}
	@media all and (max-width: 500px) {
		font-size: 10px;
		width: 90%;
		.emap-log {
			margin-bottom: -20px;
			max-height: 80px;
		}
	}

	&:after {
		background: linear-gradient(
			to bottom,
			alpha($background-color, 0) 0%,
			alpha($background-color, 1) 100%
		);
		bottom: 0;
		content: '';
		height: 90px;
		left: 0;
		pointer-events: none;
		position: absolute;
		width: 100%;
		z-index: 2;
	}

	/.emap-log {
		margin-bottom: -70px;
		max-height: 120px;
		overflow: hidden;
	}
	/.emap-log > div {
		animation: fadeOutLog 60s 30s ease-in 1;
		animation-fill-mode: forwards;
		background: alpha(#fff, .1);
		border-radius: 3px;
		color: #888;
		margin-bottom: 2px;
		opacity: 0.5;
		padding: 4px 5px;
		
		&.emap-log-D { background: alpha($color_D, .6) }
		&.emap-log-R { background: alpha($color_R, .6) }
		&.emap-log-L { background: alpha($color_L, .6) }
		&.emap-log-G { background: alpha($color_G, .6) }
		
		&:first-child {
			animation: none;
			text-shadow: 1px 1px 1px #000;
			opacity: 1;
		}
		@keyframes fadeOutLog {
			0% { opacity: 0.5 }
			100% { opacity: 0.15 }
		}

	}
	
	/.emap-log-ts {
		float: right;
	}
	/.emap-log-body {
		color: #eee;
		margin-right: 1em;
	}
}

.citations {
	color: #455a85;
	color: rgba(255,255,255,0.3);
	font-size: 8px;
	line-height: 1.2;
	margin-top: 40px;
	text-align: center;
	
	p {
		margin: 0 !important;
		padding: 0 !important;
		text-align: center;
	}
	a {
		color: inherit !important;
	}
}

.emap-loading-log {
	animation: loadingBlinker 2s linear infinite;
	color: #758ec2
	font-size: 10px;
	font-weight: normal;
	height: 11px;
	text-align: center;
	text-transform: uppercase;
	
	@keyframes loadingBlinker {
		50% { opacity: 0; }
	}
}

// Loading animation
.emap-loading {
	color: #fff;
	display: block;
	font-family: $font-family;
	left: 50%;
	opacity: 1;
	position: absolute;
	text-align: center;
	top: 40%;
	transform: translateX(-50%);
	transition: .5s all;
	visibility: visible;
	z-index: 9;
}
	.loaded .emap-loading {
		opacity: 0;
	}
	.emap-loader,
	.emap-loader:before,
	.emap-loader:after {
		background: #ffffff;
		animation: loading 1s infinite ease-in-out;
		width: 1em;
		height: 4em;
	}
	.emap-loader:before,
	.emap-loader:after {
		position: absolute;
		top: 0;
		content: '';
	}
	.emap-loader:before {
		left: -1.5em;
		-webkit-animation-delay: -0.32s;
		animation-delay: -0.32s;
	}
	.emap-loader {
		color: #ffffff;
		text-indent: -9999em;
		margin: 88px auto;
		position: relative;
		font-size: 11px;
		-webkit-transform: translateZ(0);
		-ms-transform: translateZ(0);
		transform: translateZ(0);
		-webkit-animation-delay: -0.16s;
		animation-delay: -0.16s;
	}
	.emap-loader:after {
		left: 1.5em;
	}
	@keyframes loading {
		0%,
		80%,
		100% {
			box-shadow: 0 0;
			height: 4em;
		}
		40% {
			box-shadow: 0 -2em;
			height: 5em;
		}
	}
	

